<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Opencart App test sanity suite" verbose="4" thread-count="1"
	parallel="tests">

	<listeners>
		<listener
			class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListeners" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>


	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	
</suite> 

