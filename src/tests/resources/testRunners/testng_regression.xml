		</classes>
	</test>

	<test name="Login Page Test_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>-->

	<test name="Accounts Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTests" />
		</classes>
	</test>

	<test name="Search Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.SearchTest" />
		</classes>
	</test>

		<test name="Product Info Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoTest" />
		</classes>
	</test>

	<test name="Register Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest" />
		</classes>
	</test>

</suite> 

